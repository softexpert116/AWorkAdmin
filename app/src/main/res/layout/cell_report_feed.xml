<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_publisher"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_user"
                    />
                <TextView
                    android:id="@+id/txt_name"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Smith"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/txt_date"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/03/2018"
                    android:textSize="13dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btn_block"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:background="@drawable/frame_round_btn"
                        android:text="Block"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@android:color/white"
                        android:textAllCaps="false"
                        android:focusable="false"
                        />
                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/txt_description"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."
                />
            <HorizontalScrollView
                android:layout_marginTop="10dp"
                android:id="@+id/horizontal_scroll"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:scrollbars="none"
                >
                <LinearLayout
                    android:id="@+id/ly_media"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/frame_border"
                    >
                </LinearLayout>
            </HorizontalScrollView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:id="@+id/txt_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Likes: 5"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="#eeeeee"
                >
                <TextView
                    android:id="@+id/txt_report"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Racism, Xenophobia, Social Exclusion"
                    android:textColor="@color/colorBlock"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_reporter"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_user"
                    />
                <TextView
                    android:id="@+id/txt_reporter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reported by Smith"
                    android:textStyle="italic"
                    android:textColor="#a0a0a0"
                    android:layout_marginRight="50dp"
                    android:layout_alignParentRight="true"
                    android:textSize="13dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>