<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:padding="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            >
            <ImageView
                android:id="@+id/img_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/default_pic"
                android:focusable="false"
                android:adjustViewBounds="false"
                android:layout_gravity="center"
                android:src="@drawable/default_pic"
                android:scaleType="centerCrop"
                />
            <RelativeLayout
                android:id="@+id/ly_cover"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/black"
                    android:alpha="0.6"
                    ></RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/txt_invite"
                            android:text="Celebrity 2019"
                            android:textSize="16dp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/txt_invite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Invites: 4/20"
                            android:textSize="16dp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="40dp"
                            />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="@drawable/map"
                                />
                            <TextView
                                android:id="@+id/txt_place"
                                android:layout_marginLeft="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Hanoi ripho street Conic No 9, Er10 Vietnam"
                                android:textSize="12dp"
                                android:textColor="@android:color/darker_gray"
                                android:textStyle="italic"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:background="@drawable/time"
                                />
                            <TextView
                                android:id="@+id/txt_time"
                                android:layout_marginLeft="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="1:00 am, 01/01/2019 ~ 5:00 am, 01/01/2019"
                                android:textSize="12dp"
                                android:textColor="@android:color/darker_gray"
                                android:textStyle="italic"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/txt_type"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:background="@android:color/holo_blue_dark"
                android:text="free"
                android:textSize="12dp"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                ></TextView>
            <Button
                android:id="@+id/btn_block"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/frame_round_btn"
                android:text="Block"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:focusable="false"
                android:layout_marginRight="5dp"
                ></Button>
            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="-20dp"
                android:layout_above="@+id/ly_cover"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_publisher"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_user"
                />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>