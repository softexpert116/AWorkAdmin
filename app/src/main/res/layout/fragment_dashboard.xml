<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    tools:context=".Fragments.DashboardFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="8dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Users"
                                android:textSize="18dp"
                                android:layout_marginLeft="15dp"
                                android:textStyle="bold"
                                />
                            <Button
                                android:id="@+id/btn_year_user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="100dp"
                                android:text="2018"
                                android:textSize="15dp"
                                />
                            <Button
                                android:id="@+id/btn_erase_user"
                                android:layout_marginLeft="50dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/ic_erase"
                                />
                        </LinearLayout>
                        <com.jonas.jgraph.graph.NChart
                            android:id="@+id/chart_user"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_margin="8dp"
                            />
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="8dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Parties"
                                android:textSize="18dp"
                                android:layout_marginLeft="15dp"
                                android:textStyle="bold"
                                />
                            <Button
                                android:id="@+id/btn_year_party"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="90dp"
                                android:text="2018"
                                android:textSize="15dp"
                                />
                            <Button
                                android:id="@+id/btn_erase_party"
                                android:layout_marginLeft="50dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/ic_erase"
                                />
                        </LinearLayout>

                        <com.jonas.jgraph.graph.NChart
                            android:id="@+id/chart_party"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_margin="8dp"
                            />
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_margin="8dp"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:padding="5dp"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Live Feeds"
                                android:textSize="18dp"
                                android:layout_marginLeft="15dp"
                                android:textStyle="bold"
                                />
                            <Button
                                android:id="@+id/btn_year_feed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="60dp"
                                android:text="2018"
                                android:textSize="15dp"
                                />
                            <Button
                                android:id="@+id/btn_erase_feed"
                                android:layout_marginLeft="50dp"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:background="@drawable/ic_erase"
                                />
                        </LinearLayout>
                        <com.jonas.jgraph.graph.NChart
                            android:id="@+id/chart_feed"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_margin="8dp"
                            />
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />
</RelativeLayout>